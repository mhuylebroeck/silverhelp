<h2 class="centered">Enter your details</h2>

<div class="container-login">
  <div class="form-left">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", :class => "btn-rounded centered btn-login", :style => "margin-left: 0px; margin-right: 0px" %>
      </div>
    <% end %>
    <%= render "devise/shared/links", :class => "login-options" %>
  </div>
  <div class="img-left">
  </div>
</div>
